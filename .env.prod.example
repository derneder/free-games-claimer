# Production Environment Configuration

# Node Environment
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://[user]:[password]@[host]:[port]/[database]
DB_USER=prod_user
DB_PASSWORD=change_me
DB_NAME=free_games_prod
DB_HOST=postgres
DB_PORT=5432

# Redis
REDIS_URL=redis://:change_me@redis:6379
REDIS_PASSWORD=change_me

# JWT
JWT_SECRET=change_me_with_long_random_string
JWT_EXPIRES=24h
JWT_REFRESH_EXPIRES=7d

# 2FA
TOTP_ISSUER=Free Games Claimer
TOTP_WINDOW=1

# Server
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true
API_URL=https://your-domain.com/api
FRONTEND_URL=https://your-domain.com

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/free-games/app.log

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@your-domain.com

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=change_me_with_long_random_string

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15m
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
MONITORING_ENABLED=true
MONITORING_INTERVAL=5m
MONITORING_LOG_FILE=/var/log/free-games/monitoring.log
