# ============ APPLICATION ============
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ============ DATABASE ============
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/free_games
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=free_games

# ============ REDIS ============
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ============ JWT ============
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-me-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============ CORS ============
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# ============ TELEGRAM ============
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=http://localhost:3000/telegram

# ============ EMAIL (SMTP) ============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@freegamesclaimer.com

# ============ OPTIONAL: External APIs ============
EPIC_GAMES_API=https://www.epicgames.com/graphql
GOG_API=https://www.gog.com/
STEAM_API=https://api.steampowered.com/
PRIME_GAMING_API=https://gaming.amazon.com/

# ============ SECURITY ============
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
2FA_RATE_LIMIT_MAX=3
BCRYPT_ROUNDS=10

# ============ CACHE ============
CACHE_DURATION_GAMES=600
CACHE_DURATION_ANALYTICS=1800
CACHE_ENABLED=true

# ============ SENTRY (Error Tracking) ============
SENTRY_DSN=

# ============ API Documentation ============
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs
