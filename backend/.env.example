# Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
HOST=localhost

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/free_games_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# 2FA
TWO_FA_WINDOW=2

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@freegamesclaimer.com

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# API
API_PREFIX=/api
API_VERSION=v1

# Security
SESSION_SECRET=your-session-secret
CSRF_TOKEN_MAX_AGE=86400

# External Services
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Credential Encryption (REQUIRED for auto-claim feature)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
CREDENTIALS_ENC_KEY=your-base64-encoded-32-byte-key-here
CREDENTIALS_KEY_VERSION=1

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_SLOW_MO=0

# Provider-specific Configuration
# Epic Games parental PIN (if account has parental controls)
# EPIC_PARENTAL_PIN=1234

# Proxy URL (optional, format: http://user:pass@host:port)
# PROXY_URL=

# Claim Worker Configuration
CLAIM_CRON_ENABLED=true
# Cron expression: Run daily at 10:00 AM
CLAIM_CRON_SCHEDULE=0 10 * * *
# Max concurrent claim operations
CLAIM_MAX_CONCURRENT=3
